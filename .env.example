# IssueFlow Framework Environment Variables
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=issueflow
POSTGRES_USER=issueflow
POSTGRES_PASSWORD=issueflow_secret
DATABASE_URL=postgresql://issueflow:issueflow_secret@localhost:5432/issueflow

# Redis Cache & Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_URL=redis://:redis_secret@localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Multi-tenant
TENANT_HEADER=x-tenant-id
DEFAULT_TENANT=default

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@issueflow.dev

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-change-this
WEBHOOK_TIMEOUT=5000

# External Integrations
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

CLICKUP_CLIENT_ID=
CLICKUP_CLIENT_SECRET=
CLICKUP_WEBHOOK_SECRET=

LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=
LINEAR_WEBHOOK_SECRET=

# Dashboard UI
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=IssueFlow
NEXT_PUBLIC_SUPPORT_EMAIL=support@issueflow.dev

# NextAuth (Dashboard Authentication)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Analytics
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
FEATURE_REALTIME=true
FEATURE_ANALYTICS=false
FEATURE_WEBHOOKS=true
FEATURE_INTEGRATIONS=true

# Development
DEBUG=issueflow:*
VERBOSE=false