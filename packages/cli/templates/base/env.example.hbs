# IssueFlow Configuration
# Copy this file to .env and fill in your values

# IssueFlow API Configuration
ISSUEFLOW_PROJECT_ID={{config.projectId}}
ISSUEFLOW_API_URL={{config.apiUrl}}
{{#if config.organizationSlug}}
ISSUEFLOW_ORGANIZATION_SLUG={{config.organizationSlug}}
{{/if}}

# Authentication (if using private API)
# ISSUEFLOW_API_KEY=your-api-key-here

# Integration Tokens
# GitHub Integration
# GITHUB_TOKEN=ghp_your-github-token

# ClickUp Integration  
# CLICKUP_TOKEN=pk_your-clickup-token

# Slack Integration
# SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Development Configuration
NODE_ENV=development
DEBUG=issueflow:*

# Framework-specific variables
{{#if_eq project.framework "nextjs"}}
# Next.js specific
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000
{{/if_eq}}

{{#if_eq project.framework "vue"}}
# Vue specific
VITE_APP_TITLE={{project.name}}
{{/if_eq}}

{{#if_eq project.framework "react"}}
# React specific
REACT_APP_NAME={{project.name}}
{{/if_eq}}

